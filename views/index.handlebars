
<div class="frow gutters main-content">
  <div class="col-md-1-3 text-center">
    <h2>Burgers that are ready to be eaten!</h2>
    <ul>
      {{#each burger}}
        {{#unless eaten}}
          {{> burgers/burger-block eaten=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-1-3 text-center">
    <h2>Create Da Burger</h2>
    <form class="create-form">
      <label for="ca">Type-O-Burger:</label>
    <div class="form-group frow nowrap">
      <input type="text" id="ca" name="name">
      <button class="button-none" type="submit">Add Burger</button>
    </div>
  </form>
  </div>
  <div class="col-md-1-3">
    <h2 class="text-center">Burgers that are eaten!</h2>
    <ul id="make-a-burger" class="eaten frow items-center direction-column-reverse">
      {{#each burger}}
        {{#if eaten}}
          {{> burgers/burger-block eaten=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
  
