
<h1>burgers!</h1>
<div class="frow">
  <div class="col-md-1-2">
    <h2>burgers that are not eaten!</h2>
    <ul>
      {{#each burger}}
        {{#unless eaten}}
          {{> burgers/burger-block eaten=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-1-2">
    <h2>burgers that are eaten!</h2>
    <ul>
      {{#each burger}}
        {{#if eaten}}
          {{> burgers/burger-block eaten=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="frow">
  <div class="col-md-1-2">
    <h2>Create Da Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Type-O-Burger:</label>
        <input type="text" id="ca" name="name">
      </div>
  </div>
  <div class="col-md-1-2">
      <div class="form-group">
        <label for="slee">Eaten?</label><br>
        <input type="radio" name="eaten" value="1" checked> Eaten!<br>
        <input type="radio" name="eaten" value="0"> Waiting to be eaten
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>
